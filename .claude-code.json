{
  "auto_approve": true,
  "confirm_destructive": true,
  "confirm_git_operations": false,
  "max_file_size": "500KB",
  "max_files_per_operation": 50,
  "excluded_patterns": [
    "*.log",
    "logs/*",
    "node_modules/*",
    "__pycache__/*",
    "*.pyc",
    ".pytest_cache/*",
    ".git/*",
    ".gitignore",
    ".env",
    ".env.local",
    "dist/*",
    "build/*",
    "*.egg-info/*",
    ".vscode/*",
    ".idea/*",
    "*.swp",
    "*.swo"
  ],
  "security": {
    "allow_network_operations": true,
    "allow_file_modifications": true,
    "require_confirmation_for": [
      "file_deletion",
      "git_push", 
      "env_file_changes"
    ]
  },
  "project_settings": {
    "backend_directory": "backend",
    "frontend_directory": "frontend",
    "docs_directory": "docs",
    "common_commands": {
      "start_backend": "uvicorn backend.main:app --reload --port 8000",
      "start_frontend": "cd frontend && npm run dev",
      "docker_up": "docker-compose up -d",
      "docker_logs": "docker-compose logs -f"
    }
  },
  "tools": {
    "enable_linting": true,
    "enable_formatting": true,
    "enable_type_checking": true
  }
}